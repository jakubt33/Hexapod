<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    tools:context="com.jtrzyna.hexapod.intro">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="156dp"
        android:background="@drawable/logo_synergia"
        android:gravity="bottom|start"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/logoSynergia"
        android:contentDescription="logoSynergia"
        android:layout_gravity="center"
         />    <ImageView
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/logo_hexapod"
        android:gravity="bottom|start"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/logoHexapod"
        android:contentDescription="logoHexapod"
        android:layout_gravity="center"
         />

</RelativeLayout>
